# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET            /                              controllers.Application.index()
POST           /login                         controllers.AuthenticationController.login()
GET            /user/id                       controllers.AuthenticationController.getId()
POST           /share/nearBars                controllers.ShareController.getNearBars()
POST           /share/createPost              controllers.ShareController.createPost()
POST           /share/createBar               controllers.ShareController.createBar()
POST           /share/createBeer              controllers.ShareController.createBeer()
GET            /share/getAllBeers             controllers.ShareController.getAllBeers()
GET            /share/beersFromBar/:id        controllers.ShareController.getBeersFromBar(id: Integer)

POST            /beer/create                  controllers.BeerController.create()

# Options for CORS Cross Origin Resource Sharing
OPTIONS        /                              controllers.CorsController.CorsOptions(url: String ?= "root")
OPTIONS        /*url                          controllers.CorsController.CorsOptions(url: String)


# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                  controllers.Assets.at(path="/public", file)
