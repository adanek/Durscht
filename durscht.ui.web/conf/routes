# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Admin Page @Roman hier deine routen eintragen
GET            /                              controllers.Application.index()
POST           /user/login                    controllers.AuthenticationController.adminLogin()
GET            /admin/users                   controllers.MenuController.allUsers()
GET            /admin/bars                    controllers.MenuController.allBars()
GET            /admin/posts                   controllers.MenuController.allPosts()
GET            /admin/beers                   controllers.MenuController.allBeers()

GET            /posts/delete/:id              controllers.MenuController.deletePost(id:Integer)
GET            /beers/delete/:id              controllers.MenuController.deleteBeer(id:Integer)
GET            /bars/delete/:id               controllers.MenuController.deleteBar(id:Integer)
GET            /users/delete/:id              controllers.MenuController.deleteUser(id:Integer)


# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                  controllers.Assets.at(path="/public", file)

# WebService API
GET            /user/id                       controllers.AuthenticationController.getId()
POST           /user/login                    controllers.AuthenticationController.login()
POST           /user/logout                   controllers.AuthenticationController.logout()
POST           /user/register                 controllers.AuthenticationController.register()

POST           /share/nearBars                controllers.ShareController.getNearBars()
POST           /share/createPost              controllers.ShareController.createPost()
POST           /share/createBar               controllers.ShareController.createBar()
POST           /share/createBeer              controllers.ShareController.createBeer()
GET            /share/getAllBeers             controllers.ShareController.getAllBeers()
GET            /share/beersFromBar/:id        controllers.ShareController.getBeersFromBar(id: Integer)

POST           /beer/create                   controllers.BeerController.create()

# Options for CORS Cross Origin Resource Sharing
OPTIONS        /                              controllers.CorsController.CorsOptions(url: String ?= "root")
OPTIONS        /*url                          controllers.CorsController.CorsOptions(url: String)
