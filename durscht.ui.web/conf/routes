# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET            /                        controllers.Application.index()
POST           /share/nearBars          controllers.ShareController.getNearBars()
POST           /share/createPost        controllers.ShareController.createPost()
POST           /share/createBar         controllers.ShareController.createBar()
POST           /share/createBeer        controllers.ShareController.createBeer()
GET            /share/getAllBeers       controllers.ShareController.getAllBeers()

# Options for CORS Cross Origin Resource Sharing
OPTIONS        /                        controllers.Application.CorsOptions(url: String ?= "root")
OPTIONS        /*url                    controllers.Application.CorsOptions(url: String)


# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file            controllers.Assets.at(path="/public", file)
